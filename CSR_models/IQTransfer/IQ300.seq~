!----------------------------------------------------
!------------------ GLOBALS -------------------------
!----------------------------------------------------
! E = 300 keV Proton

TITLE, "Ion Source 300 kV";

ENERGY:= 0.0003; ! Energie in GeV
MASSE0:= 0.9385;      ! Masse;

EGES  := MASSE0+ENERGY;
GAMMA := EGES/MASSE0;
BETA  := SQRT(1-1/(GAMMA*GAMMA));

VALUE, GAMMA;
VALUE, BETA;

emmix := 30e-6;  
emmiy := 30e-6;  
DELPP := 0.01*BETA;

Ekin_classisch := 0.5*masse0*1E6*beta*beta;
VALUE, Ekin_classisch;


BETAx300kV=0.28;
Betay300kv=0.45;
ALFA300kV=0;

!-------------------------------------------------
!------ ION SOURCE 300KV TRANSFER LINE -----------
!-------------------------------------------------

DRIFT1:       DRIFT, L=1;
